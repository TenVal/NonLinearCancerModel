<UserControl x:Class="NotLinearCancerModel.MVVM.View.CalculateOneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotLinearCancerModel.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1350">


    <StackPanel Margin="0,0,0,0" Width="1350">

        <Grid Margin="0,0,0,0" Width="1350">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <Button 
            x:Name="Calculate"
            Click="Calculate_Click"
            Content="Calculate" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="200"
            Height="50"
            Margin="10,0,0,0"
            Grid.Column="0" Grid.Row="0" 
            Grid.RowSpan="2"
            Background="#4e99ff"
            Foreground="White"/>

            <Button 
            x:Name="ImportParams"
            Click="ImportParams_Click"
            Content="Import finded &#xD;&#xA;min params" 
            HorizontalAlignment="Left" 
            Width="200"
            Height ="50"
            Margin="220,0,0,0"
            Grid.Column="0" Grid.Row="0" 
            Grid.RowSpan="2" 
            Background="#4e99ff"
            Foreground="White"/>

            <ComboBox 
                x:Name="ComboBoxChoosePatient"
                Margin="436,0,14,21"
                Grid.Column="0" Grid.Row="0" 
                Grid.RowSpan="2"                  
                Height="30" 
                Width="50"
                VerticalAlignment="Bottom">
                <TextBlock>1</TextBlock>
                <TextBlock>2</TextBlock>
                <TextBlock>3</TextBlock>
                <TextBlock>4</TextBlock>
                <TextBlock>5</TextBlock>
                <TextBlock>6</TextBlock>
                <TextBlock>7</TextBlock>
                <TextBlock>8</TextBlock>
                <TextBlock>9</TextBlock>
                <TextBlock>10</TextBlock>
            </ComboBox>
            <Label 
            x:Name="LabelChoosePatient" 
            Content="Choose &#xD;&#xA;patient" 
            HorizontalAlignment="Left" 
            Width="50"
            Height="40"
            VerticalAlignment="Top"
            Margin="435,5,0,0"
            Grid.Column="0" Grid.Row="1"
            Foreground="White" Grid.RowSpan="3"/>

            <TextBox 
            x:Name="TextBoxLength" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="250" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="0" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelLength" 
            Content="Length" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="1"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAngleXY" 
            HorizontalAlignment="Left"             
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap"           
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="0" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAngleXY" 
            Content="AngleXY" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="1"
            Foreground="White"/>
            
            <TextBox 
            x:Name="TextBoxSpeed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Text="1,1" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="0" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelSpeed" 
            Content="Speed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="1"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxK" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="0,6" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="0" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelK" 
            Content="K" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="1"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAlpha" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="1" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="0" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAlpha" 
            Content="Alpha" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="1"
            Foreground="White"/>
            



            <ProgressBar
                x:Name="ProgressBarCalculate"
                Grid.Column="0" Grid.Row="3" Margin="10,4,0,4"
                Visibility="Collapsed"/>
            <TextBlock 
                x:Name="PercentProgressBarCalculate"
                Grid.Row="3" 
                Visibility="Collapsed"
                Text="{Binding ElementName=ProgressBarCalculate, Path=Value, StringFormat={}{0:0}%}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" />

            <TextBox 
            x:Name="TextBoxH" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="10" 
            TextWrapping="Wrap" 
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="2" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelH" 
            Content="H (Step by X, Y, Z)" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="3"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap" 
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="2" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAngleZ" 
            Content="AngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="3"
            Foreground="White"/>
            
            <TextBox 
            x:Name="TextBoxD" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="10e-12" 
            TextWrapping="Wrap"             
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="2" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelD" 
            Content="D" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="3"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxTMax" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="300" 
            TextWrapping="Wrap"             
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="2" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelTMax" 
            Content="Time" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="3"
            Foreground="White"/>
        </Grid>

    </StackPanel>

</UserControl>
