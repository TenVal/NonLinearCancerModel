<Window x:Class="NotLinearCancerModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotLinearCancerModel"
        mc:Ignorable="d"
        Title="Calculate Cancer" Height="800" Width="1300">
    <Grid 
        Margin="0,0,0,0" Width="1300" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image 
            x:Name="Image1" 
            HorizontalAlignment="Left" 
            Height="511" 
            Width="600"
            VerticalAlignment="Top"  
            Margin="20, 20, 0, 0"
            Grid.Column="0" Grid.Row="0"
            Grid.ColumnSpan="4" />
        <Image 
            x:Name="Image2" 
            HorizontalAlignment="Left" 
            Height="511" 
            Width="600"
            VerticalAlignment="Top" 
            Margin="20, 20, 0, 0"
            Grid.Column="4" Grid.Row="0"
            Grid.ColumnSpan="4"/>


        <Button 
            x:Name="SavePlots" 
            Content="Save Plots" 
            HorizontalAlignment="Left" 
            Width="65" 
            Click="SavePlots_Click"
            Margin="20,4,0,3"
            Grid.Column="0" Grid.Row="1"/>
        <Button 
            x:Name="ShowPlots" 
            Content="Show Plots" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="65" 
            Height="18" 
            Click="ShowPlots_Click"
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="1"/>
        <TextBox 
            x:Name="TextBoxPatientNumberPlot" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            TextWrapping="Wrap"             
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="1"/>
        <Label 
            x:Name="LabelPatientNumberPlot" 
            Content="Patient Number Plot" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="2"/>
        <RadioButton  
            x:Name="RadioButtonFindMin" 
            IsChecked = "True"
            GroupName="TypeOfCalculate"
            Content="With find min"    
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20,0,0,0" 
            Grid.Column="3" Grid.Row="1" />
        <RadioButton 
            x:Name="RadioButtonWithoutFindMin" 
            GroupName="TypeOfCalculate"
            Content="Without find min" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20,0,0,0" 
            Grid.Column="4"  Grid.Row="1" />



        <Button 
            x:Name="Calculate"
            Click="Calculate_Click"
            Content="Calculate" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" 
            Width="65"
            Height="18"
            Margin="20,0,0,3"
            Grid.Column="0" Grid.Row="3" />

        <TextBox 
            x:Name="TextBoxSpeed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Text="1,3" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="3"/>
        <Label 
            x:Name="LabelSpeed" 
            Content="Speed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="4"/>

        <TextBox 
            x:Name="TextBoxAngleXY" 
            HorizontalAlignment="Left"             
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap"           
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="3"/>
        <Label 
            x:Name="LabelAngleXY" 
            Content="AngleXY" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="4"/>

        <TextBox 
            x:Name="TextBoxAngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap" 
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="3"/>
        <Label 
            x:Name="LabelAngleZ" 
            Content="AngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="4"/>

        <TextBox 
            x:Name="TextBoxK" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="0,4" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="3"/>
        <Label 
            x:Name="LabelK" 
            Content="K" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="4"/>

        <TextBox 
            x:Name="TextBoxAccuracy" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Text="1" 
            TextWrapping="Wrap" 
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="3"/>
        <Label 
            x:Name="LabelAccuracy" 
            Content="Accuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="4"/>



        <TextBox 
            x:Name="TextBoxLength" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="250" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="5"/>
        <Label 
            x:Name="LabelLength" 
            Content="Length" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="1" Grid.Row="6"/>

        <TextBox 
            x:Name="TextBoxH" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="10" 
            TextWrapping="Wrap" 
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="5"/>
        <Label 
            x:Name="LabelH" 
            Content="H" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="6"/>

        <TextBox 
            x:Name="TextBoxD" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="10e-12" 
            TextWrapping="Wrap"             
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="5"/>
        <Label 
            x:Name="LabelD" 
            Content="D" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="6"/>

        <TextBox 
            x:Name="TextBoxStepAccuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="0,1" 
            TextWrapping="Wrap" 
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="5"/>
        <Label 
            x:Name="LabelStepAccuracy" 
            Content="StepAccuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="6"/>
    </Grid>
</Window>
