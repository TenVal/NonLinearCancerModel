<Window x:Class="NotLinearCancerModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotLinearCancerModel"
        xmlns:viewModel="clr-namespace:NotLinearCancerModel.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Calculate Cancer" 
        Height="800" 
        Width="1500"
        ResizeMode="NoResize"
        Background="Transparent"
      
        >
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border Background="#272537"
            CornerRadius="30">
        <Grid 
        Margin="0,0,0,0" Width="1500">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="25"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <TextBox 
                Width="250"
                Height="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" 
                Style="{StaticResource ModernTextbox}"/>

            <Image 
            x:Name="Image1" 
            HorizontalAlignment="Left" 
            Height="511" 
            Width="600"
            VerticalAlignment="Top"  
            Margin="20, 20, 0, 0"
            Grid.Column="1" Grid.Row="1"
            Grid.ColumnSpan="3" />
            <Image 
            x:Name="Image2" 
            HorizontalAlignment="Left" 
            Height="511" 
            Width="600"
            VerticalAlignment="Top" 
            Margin="20, 20, 0, 0"
            Grid.Column="4" Grid.Row="1"
            Grid.ColumnSpan="3"/>


            <Button 
            x:Name="SavePlots" 
            Content="Save Plots" 
            HorizontalAlignment="Left" 
            Width="65" 
            Click="SavePlots_Click"
            Margin="20,4,0,3"
            Grid.Column="1" Grid.Row="2"
            Background="#4e99ff"
            Foreground="White"/>
            <Button 
            x:Name="ShowPlots" 
            Content="Show Plots" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="65" 
            Height="18" 
            Click="ShowPlots_Click"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="2"
            Background="#4e99ff"
            Foreground="White"/>
            <TextBox 
            x:Name="TextBoxPatientNumberPlot" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            TextWrapping="Wrap"             
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="2" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelPatientNumberPlot" 
            Content="Patient Number Plot" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="3"
            Foreground="White"/>
            <RadioButton  
            x:Name="RadioButtonFindMin" 
            Content="With find min" 
            GroupName="TypeOfCalculate"
            Grid.Column="0" Grid.Row="2" 
            FontSize="14"
            Foreground="White"
            Style="{StaticResource MenuButtonTheme}"/>
            <RadioButton 
            x:Name="RadioButtonWithoutFindMin" 
            Content="Without find min"  
            GroupName="TypeOfCalculate"             
            Grid.Column="0"  Grid.Row="3" 
            FontSize="14"
            Foreground="White"
            Style="{StaticResource MenuButtonTheme}"/>



            <Button 
            x:Name="Calculate"
            Click="Calculate_Click"
            Content="Calculate" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" 
            Width="65"
            Height="18"
            Margin="20,0,0,3"
            Grid.Column="1" Grid.Row="4" 
            Background="#4e99ff"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxSpeed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Text="1,3" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="4" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelSpeed" 
            Content="Speed" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="5"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAngleXY" 
            HorizontalAlignment="Left"             
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap"           
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="4" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAngleXY" 
            Content="AngleXY" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="5"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="30" 
            TextWrapping="Wrap" 
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="4" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAngleZ" 
            Content="AngleZ" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="5"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxK" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="0,4" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="4" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelK" 
            Content="K" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="5" Grid.Row="5"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxAccuracy" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Text="1" 
            TextWrapping="Wrap" 
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="6" Grid.Row="4" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelAccuracy" 
            Content="Accuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="6" Grid.Row="5"
            Foreground="White"/>



            <TextBox 
            x:Name="TextBoxLength" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="250" 
            TextWrapping="Wrap"            
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="6" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelLength" 
            Content="Length" 
            HorizontalAlignment="Left"  
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="2" Grid.Row="7"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxH" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="10" 
            TextWrapping="Wrap" 
            Width="120"
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="6" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelH" 
            Content="H" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="3" Grid.Row="7"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxD" 
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Text="10e-12" 
            TextWrapping="Wrap"             
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="6" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelD" 
            Content="D" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="20, 0, 0, 0"
            Grid.Column="4" Grid.Row="7"
            Foreground="White"/>

            <TextBox 
            x:Name="TextBoxStepAccuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Text="0,1" 
            TextWrapping="Wrap" 
            Width="120" 
            Margin="20, 0, 0, 0"
            Grid.Column="6" Grid.Row="6" Background="#FF353340" Foreground="White"/>
            <Label 
            x:Name="LabelStepAccuracy" 
            Content="StepAccuracy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            Margin="20, 0, 0, 0"
            Grid.Column="6" Grid.Row="7"
            Foreground="White"/>
        </Grid>
    </Border>
</Window>
